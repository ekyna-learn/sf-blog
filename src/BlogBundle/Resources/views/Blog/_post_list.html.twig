{% for post in posts %}
    {% set post_path = path('blog_post', {'categorySlug': post.category.slug, 'postSlug': post.slug}) %}
    <div>
        <h3>
            <a href="{{ post_path }}">
                {{ post.title }}
            </a>
        </h3>
        <p>
            <a href="{{ path('blog_category', {'categorySlug': post.category.slug}) }}">
                {{ post.category.title }}
            </a> -
            <em>Publi√© le {{ post.publishedAt|date('d/m/Y') }}</em>, par
            <strong>{{ post.author }}</strong>
        </p>
        <p>
            {{ post.content|summary }}
        </p>
        <p class="text-right">
            <a href="{{ post_path }}" class="btn btn-primary btn-sm">
                Lire la suite
            </a>
        </p>
    </div>
    {% if not loop.last %}<hr>{% endif %}
{% endfor %}